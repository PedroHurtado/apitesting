						"exec": [
							"pm.test(\"Status code es 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Response tiene la estructura correcta\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.have.property('id');",
							"    pm.expect(jsonData).to.have.property('name');",
							"    pm.expect(jsonData).to.have.property('description');",
							"    pm.expect(jsonData).to.have.property('url');",
							"    pm.expect(jsonData).to.have.property('price');",
							"    pm.expect(jsonData).to.have.property('ingredients');",
							"});",
							"",
							"pm.test(\"Los datos se actualizaron correctamente\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.name).to.eql(\"Pizza Margherita Actualizada\");",
							"    pm.expect(jsonData.description).to.eql(\"Deliciosa pizza con tomate, mozzarella y albahaca fresca\");",
							"    pm.expect(jsonData.url).to.eql(\"https://example.com/pizzas/margherita-updated.jpg\");",
							"});",
							"",
							"pm.test(\"El ID no cambió\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.id).to.eql(pm.collectionVariables.get(\"existingPizzaId\"));",
							"});",
							"",
							"pm.test(\"Price es un número decimal mayor que 0\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.price).to.be.a('number');",
							"    pm.expect(jsonData.price).to.be.above(0);",
							"});",
							"",
							"pm.test(\"Ingredients es un array\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.ingredients).to.be.an('array');",
							"});"
